@{
    ViewData["Title"] = "Giao vu - Hoc phan dieu kien";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_EducationNav")
    <section class="portal-content">
        <h1>Hoc phan dieu kien</h1>
        <p>Quan ly hoc phan co dieu kien tien quyet.</p>

        <div class="section-block" data-edu-filter data-target="edu-condition-table">
            <h3>Bo loc</h3>
            <div class="toolbar">
                <select class="input-text" data-filter="major">
                    <option value="all">Tat ca chuyen nganh</option>
                    <option value="CNPM">CNPM</option>
                    <option value="ATTT">ATTT</option>
                    <option value="HTTT">HTTT</option>
                </select>
                <select class="input-text" data-filter="class">
                    <option value="all">Tat ca lop</option>
                    <option value="K58">K58</option>
                    <option value="K59">K59</option>
                </select>
            </div>
        </div>

        <div class="section-block" data-edu-form data-target="edu-condition-table">
            <h3>Them / cap nhat hoc phan dieu kien</h3>
            <div class="toolbar">
                <input class="input-text" data-field="code" placeholder="Ma hoc phan" />
                <input class="input-text" data-field="name" placeholder="Ten hoc phan" />
                <input class="input-text" data-field="credits" placeholder="So tin chi" />
            </div>
            <div class="toolbar">
                <input class="input-text" data-field="condition" placeholder="Dieu kien hoan thanh" />
                <input class="input-text" data-field="major" placeholder="Chuyen nganh" />
                <input class="input-text" data-field="class" placeholder="Lop" />
            </div>
            <div class="toolbar">
                <input class="input-text" data-field="note" placeholder="Ghi chu" />
                <button class="btn" type="button" data-action="save">Luu hoc phan</button>
                <button class="btn secondary" type="button" data-action="cancel">Huy</button>
            </div>
        </div>

        <div class="section-block">
            <h3>Danh sach hoc phan dieu kien</h3>
            <table class="portal-table" id="edu-condition-table" data-columns="code,name,credits,condition,major,class,note" data-edu-api="/api/hoc-phan" data-edu-type="Dieu kien">
                <thead>
                    <tr>
                        <th>Ma hoc phan</th>
                        <th>Ten hoc phan</th>
                        <th>So tin chi</th>
                        <th>Dieu kien hoan thanh</th>
                        <th>Chuyen nganh</th>
                        <th>Lop</th>
                        <th>Ghi chu</th>
                        <th>Hanh dong</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="8">Dang tai du lieu...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/education-crud.js" asp-append-version="true"></script>
}
