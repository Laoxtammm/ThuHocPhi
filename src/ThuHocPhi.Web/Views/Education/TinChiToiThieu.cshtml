@{
    ViewData["Title"] = "Giao vu - Tin chi toi thieu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_EducationNav")
    <section class="portal-content">
        <h1>Tin chi toi thieu</h1>
        <p>Thiet lap quy dinh tin chi toi thieu/toi da theo tung chuyen nganh.</p>

        <div class="section-block" data-edu-filter data-target="edu-credit-table">
            <h3>Bo loc</h3>
            <div class="toolbar">
                <select class="input-text" data-filter="major">
                    <option value="all">Tat ca chuyen nganh</option>
                    <option value="CNPM">CNPM</option>
                    <option value="ATTT">ATTT</option>
                    <option value="HTTT">HTTT</option>
                </select>
                <select class="input-text" data-filter="class">
                    <option value="all">Tat ca lop</option>
                    <option value="K58">K58</option>
                    <option value="K59">K59</option>
                </select>
            </div>
        </div>

        <div class="section-block" data-edu-form data-target="edu-credit-table">
            <h3>Them / cap nhat quy dinh</h3>
            <div class="toolbar">
                <input class="input-text" data-field="major" placeholder="Chuyen nganh" />
                <input class="input-text" data-field="class" placeholder="Lop" />
                <input class="input-text" data-field="min" placeholder="Tin chi toi thieu" />
            </div>
            <div class="toolbar">
                <input class="input-text" data-field="max" placeholder="Tin chi toi da" />
                <input class="input-text" data-field="note" placeholder="Ghi chu" />
                <button class="btn" type="button" data-action="save">Luu quy dinh</button>
                <button class="btn secondary" type="button" data-action="cancel">Huy</button>
            </div>
        </div>

        <div class="section-block">
            <h3>Danh sach quy dinh tin chi</h3>
            <table class="portal-table" id="edu-credit-table" data-columns="major,class,min,max,note">
                <thead>
                    <tr>
                        <th>Chuyen nganh</th>
                        <th>Lop</th>
                        <th>Toi thieu</th>
                        <th>Toi da</th>
                        <th>Ghi chu</th>
                        <th>Hanh dong</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-major="CNPM" data-class="K58">
                        <td>CNPM</td>
                        <td>K58</td>
                        <td>12</td>
                        <td>25</td>
                        <td>Ap dung cho he dan su</td>
                        <td>
                            <button class="btn secondary" type="button" data-edit>Sua</button>
                            <button class="btn secondary" type="button" data-delete>Xoa</button>
                        </td>
                    </tr>
                    <tr data-major="ATTT" data-class="K59">
                        <td>ATTT</td>
                        <td>K59</td>
                        <td>14</td>
                        <td>24</td>
                        <td>Yeu cau tin chi nang cao</td>
                        <td>
                            <button class="btn secondary" type="button" data-edit>Sua</button>
                            <button class="btn secondary" type="button" data-delete>Xoa</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/education-crud.js" asp-append-version="true"></script>
}
