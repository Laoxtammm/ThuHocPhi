@{
    ViewData["Title"] = "Giao vu - Thong bao ket qua";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_EducationNav")
    <section class="portal-content">
        <h1>Thong bao ket qua hoc tap</h1>
        <p>Gui thong bao ket qua hoc tap theo tung chuyen nganh, lop.</p>

        <div class="section-block" data-edu-filter data-target="edu-result-table">
            <h3>Bo loc</h3>
            <div class="toolbar">
                <select class="input-text" data-filter="major">
                    <option value="all">Tat ca chuyen nganh</option>
                    <option value="CNPM">CNPM</option>
                    <option value="ATTT">ATTT</option>
                    <option value="HTTT">HTTT</option>
                </select>
                <select class="input-text" data-filter="class">
                    <option value="all">Tat ca lop</option>
                    <option value="K58">K58</option>
                    <option value="K59">K59</option>
                </select>
            </div>
        </div>

        <div class="section-block" data-edu-form data-target="edu-result-table">
            <h3>Tao thong bao moi</h3>
            <div class="toolbar">
                <input class="input-text" data-field="title" placeholder="Tieu de thong bao" />
                <input class="input-text" data-field="term" placeholder="Hoc ky/Nam hoc" />
                <input class="input-text" data-field="major" placeholder="Chuyen nganh" />
            </div>
            <div class="toolbar">
                <input class="input-text" data-field="class" placeholder="Lop" />
                <input class="input-text" data-field="content" placeholder="Noi dung thong bao" />
                <button class="btn" type="button" data-action="save">Luu thong bao</button>
                <button class="btn secondary" type="button" data-action="cancel">Huy</button>
            </div>
        </div>

        <div class="section-block">
            <h3>Danh sach thong bao</h3>
            <table class="portal-table" id="edu-result-table" data-columns="title,term,major,class,content">
                <thead>
                    <tr>
                        <th>Tieu de</th>
                        <th>Hoc ky</th>
                        <th>Chuyen nganh</th>
                        <th>Lop</th>
                        <th>Noi dung</th>
                        <th>Hanh dong</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-major="CNPM" data-class="K58">
                        <td>Thong bao ket qua HK1</td>
                        <td>HK1 2025/2026</td>
                        <td>CNPM</td>
                        <td>K58</td>
                        <td>Ket qua da duoc cap nhat tren cong thong tin.</td>
                        <td>
                            <button class="btn secondary" type="button" data-edit>Sua</button>
                            <button class="btn secondary" type="button" data-delete>Xoa</button>
                        </td>
                    </tr>
                    <tr data-major="HTTT" data-class="K59">
                        <td>Thong bao diem TB</td>
                        <td>HK2 2024/2025</td>
                        <td>HTTT</td>
                        <td>K59</td>
                        <td>Vui long kiem tra diem trung binh ky.</td>
                        <td>
                            <button class="btn secondary" type="button" data-edit>Sua</button>
                            <button class="btn secondary" type="button" data-delete>Xoa</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/education-crud.js" asp-append-version="true"></script>
}
