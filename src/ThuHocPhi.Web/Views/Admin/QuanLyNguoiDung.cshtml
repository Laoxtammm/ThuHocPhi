@{
    ViewData["Title"] = "Quan ly nguoi dung";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_AdminNav")
    <section class="portal-content">
        <h1>Quan ly nguoi dung</h1>
        <p>Tao moi, phan quyen va khoa/mo tai khoan.</p>

        <div class="toolbar">
            <button class="btn" type="button" data-admin-action="add-user">Them nguoi dung</button>
            <button class="btn secondary" type="button" data-admin-action="export-user">Xuat danh sach</button>
        </div>

        <table class="portal-table" id="admin-user-table">
            <thead>
                <tr>
                    <th>Tai khoan</th>
                    <th>Ho ten</th>
                    <th>Vai tro</th>
                    <th>Trang thai</th>
                    <th>Hanh dong</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>admin</td>
                    <td>Quan tri he thong</td>
                    <td>Administrator</td>
                    <td><span class="badge ok">Hoat dong</span></td>
                    <td><button class="btn secondary" type="button" data-edit-user>Sua</button></td>
                </tr>
                <tr>
                    <td>ketoan01</td>
                    <td>Phong Tai chinh</td>
                    <td>PhongTaiChinh</td>
                    <td><span class="badge ok">Hoat dong</span></td>
                    <td><button class="btn secondary" type="button" data-edit-user>Sua</button></td>
                </tr>
                <tr>
                    <td>daotao01</td>
                    <td>Phong Dao tao</td>
                    <td>PhongDaoTao</td>
                    <td><span class="badge warn">Tam khoa</span></td>
                    <td><button class="btn secondary" type="button" data-toggle-user>Mo khoa</button></td>
                </tr>
            </tbody>
        </table>
    </section>
</div>

@section Scripts {
    <script src="~/js/admin-actions.js" asp-append-version="true"></script>
}
