@{
    ViewData["Title"] = "Thong bao hoc phi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_AdminNav")
    <section class="portal-content">
        <h1>Thong bao hoc phi</h1>
        <p>Tao va gui thong bao hoc phi theo lop/khoa.</p>

        <div class="toolbar">
            <button class="btn" type="button" data-admin-action="add-notice">Tao thong bao</button>
            <button class="btn secondary" type="button" data-admin-action="remind-notice">Gui nhac no</button>
        </div>
        <pre class="portal-result" id="admin-notice-output"></pre>

        <table class="portal-table" id="admin-notice-table">
            <thead>
                <tr>
                    <th>Ma thong bao</th>
                    <th>Hoc ky</th>
                    <th>Pham vi</th>
                    <th>Han nop</th>
                    <th>Trang thai</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>TBHP2025_01</td>
                    <td>HK1 2025-2026</td>
                    <td>Khoa CNTT</td>
                    <td>30/09/2025</td>
                    <td><span class="badge ok">Da phat hanh</span></td>
                </tr>
                <tr>
                    <td>TBHP2025_02</td>
                    <td>HK1 2025-2026</td>
                    <td>Khoa Co khi</td>
                    <td>30/09/2025</td>
                    <td><span class="badge warn">Nhap</span></td>
                </tr>
            </tbody>
        </table>
    </section>
</div>

@section Scripts {
    <script src="~/js/admin-actions.js" asp-append-version="true"></script>
}
