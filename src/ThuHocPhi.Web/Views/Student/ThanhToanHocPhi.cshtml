@{
    ViewData["Title"] = "Thanh toan hoc phi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_StudentNav")
    <section class="portal-content">
        <h1>Thanh toan hoc phi</h1>
        <p>Chon phuong thuc thanh toan phu hop va xac nhan giao dich.</p>

        <div class="section-block">
            <h3>Khoan can thanh toan</h3>
            <table class="portal-table" id="payment-items" data-payment-table data-ma-hoc-ky="HK1_2526">
                <thead>
                    <tr>
                        <th>Khoan thu</th>
                        <th>Hoc ky</th>
                        <th>So tien</th>
                        <th>Trang thai</th>
                        <th>Hanh dong</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="5">Dang tai du lieu cong no...</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="section-block">
            <h3>Phuong thuc thanh toan</h3>
            <div class="toolbar">
                <button class="btn" type="button" data-payment="VNPay">VNPay</button>
                <button class="btn secondary" type="button" data-payment="MoMo">MoMo</button>
                <button class="btn secondary" type="button" data-payment="Chuyen khoan">Chuyen khoan</button>
            </div>
            <p class="note" id="payment-note"></p>
            <p>Vui long hoan tat thanh toan de duoc dang ky thi ket thuc mon.</p>
        </div>

        <div class="toolbar">
            <button class="btn" type="button" id="btn-pay">Thanh toan toan bo</button>
            <button class="btn secondary" type="button" id="btn-receipt">Xuat bien lai</button>
            <a class="btn secondary" asp-controller="Student" asp-action="HocPhi">Quay lai cong no</a>
        </div>
        <pre class="portal-result" id="payment-output"></pre>
    </section>
</div>

@section Scripts {
    <script src="~/js/student-payment.js" asp-append-version="true"></script>
}
