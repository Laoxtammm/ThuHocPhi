@{
    ViewData["Title"] = "Cong sinh vien";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal" data-dashboard data-ma-hoc-ky="HK1_2526">
    @await Html.PartialAsync("_StudentNav")
    <section class="portal-content">
        <h1>Cong sinh vien</h1>
        <p>Quan ly dang ky tin chi, theo doi hoc tap va thanh toan hoc phi tap trung.</p>

        <div class="card-grid">
            <div class="stat-card">
                <h4>Hoc ky hien tai</h4>
                <div class="value" id="dashboard-term">HK1 - 2025/2026</div>
                <span class="tag" id="dashboard-term-status">Dang mo</span>
            </div>
            <div class="stat-card">
                <h4>Cong no hoc phi</h4>
                <div class="value" id="dashboard-debt">0d</div>
                <span class="badge warn" id="dashboard-debt-badge">Chua thanh toan</span>
            </div>
            <div class="stat-card">
                <h4>Tin chi da dang ky</h4>
                <div class="value" id="dashboard-credits">0</div>
                <span class="tag" id="dashboard-credits-note">Tong tu khi nhap hoc</span>
            </div>
            <div class="stat-card">
                <h4>Dang ky thi</h4>
                <div class="value">Chua mo</div>
                <span class="badge danger">Chua du dieu kien</span>
            </div>
        </div>

        <div class="section-block">
            <h3>Truy cap nhanh</h3>
            <div class="toolbar">
                <a class="btn" asp-controller="Student" asp-action="DangKyTinChi">Dang ky hoc phan</a>
                <a class="btn secondary" asp-controller="Student" asp-action="HocPhi">Thanh toan hoc phi</a>
                <a class="btn secondary" asp-controller="Student" asp-action="TinhTrangHocTap">Tien trinh hoc tap</a>
                <a class="btn secondary" asp-controller="Student" asp-action="ThongTinSinhVien">Ho so sinh vien</a>
            </div>
            <p>Hoan tat hoc phi truoc khi dang ky thi ket thuc mon.</p>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/student-dashboard.js" asp-append-version="true"></script>
}
