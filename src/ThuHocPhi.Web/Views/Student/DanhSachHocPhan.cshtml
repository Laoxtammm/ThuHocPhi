@{
    ViewData["Title"] = "Danh sach hoc phan";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_StudentNav")
    <section class="portal-content">
        <h1>Danh sach hoc phan mo dang ky</h1>
        <p>Chon hoc phan phu hop voi ke hoach hoc tap.</p>

        <table class="portal-table" data-course-table data-course-api="/api/hoc-phan" data-ma-hoc-ky="HK1_2526">
            <thead>
                <tr>
                    <th>Ma hoc phan</th>
                    <th>Ten hoc phan</th>
                    <th>So tin chi</th>
                    <th>Dieu kien</th>
                    <th>Hanh dong</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="5">Dang tai danh sach hoc phan...</td>
                </tr>
            </tbody>
        </table>
        <p class="note" id="course-note"></p>

        <div class="toolbar">
            <a class="btn secondary" asp-controller="Student" asp-action="DangKyTinChi">Quay lai dang ky</a>
        </div>
    </section>
</div>

<div class="modal hidden" id="course-modal">
    <div class="modal-content">
        <h3>Thong tin hoc phan</h3>
        <p id="modal-course-name"></p>
        <div class="modal-section">
            <label>Chon ca hoc</label>
            <div class="modal-options" id="modal-schedules"></div>
        </div>
        <div class="toolbar">
            <button class="btn secondary" type="button" id="modal-cancel">Huy</button>
            <button class="btn" type="button" id="modal-confirm" disabled>Them vao dang ky</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/student-courses.js" asp-append-version="true"></script>
}
