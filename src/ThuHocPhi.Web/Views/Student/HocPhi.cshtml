@{
    ViewData["Title"] = "Cong no hoc phi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_StudentNav")
    <section class="portal-content">
        <h1>Cong no hoc phi</h1>
        <p>Theo doi cong no va lich su thanh toan hoc phi.</p>

        <div class="card-grid">
            <div class="stat-card">
                <h4>Tong phai thu</h4>
                <div class="value" id="fee-total">0d</div>
            </div>
            <div class="stat-card">
                <h4>Da thanh toan</h4>
                <div class="value" id="fee-paid">0d</div>
            </div>
            <div class="stat-card">
                <h4>Con no</h4>
                <div class="value" id="fee-remaining">0d</div>
                <span class="badge warn" id="fee-remaining-badge">Chua co cong no</span>
            </div>
        </div>

        <table class="portal-table" data-fee-table data-ma-hoc-ky="HK1_2526">
            <thead>
                <tr>
                    <th>Khoan thu</th>
                    <th>Hoc ky</th>
                    <th>So tien</th>
                    <th>Trang thai</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4">Dang tai cong no...</td>
                </tr>
            </tbody>
        </table>

        <div class="section-block">
            <h3>Dieu kien dang ky thi</h3>
            <p>Vui long hoan tat hoc phi de duoc dang ky thi ket thuc mon.</p>
            <div class="toolbar">
                <a class="btn" asp-controller="Student" asp-action="ThanhToanHocPhi">Thanh toan hoc phi</a>
                <button class="btn secondary disabled" type="button">Dang ky thi ket thuc mon</button>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/student-fee.js" asp-append-version="true"></script>
}
