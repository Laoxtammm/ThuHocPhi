@{
    ViewData["Title"] = "Dang ky tin chi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_StudentNav")
    <section class="portal-content">
        <h1>Dang ky tin chi</h1>
        <p>Chon hoc phan theo ke hoach dao tao. Thanh toan hoc phi day du truoc khi dang ky thi ket thuc mon.</p>

        <div class="toolbar">
            <a class="btn" asp-controller="Student" asp-action="DanhSachHocPhan">Them hoc phan</a>
            <span class="badge warn">Hoc phi chua hoan tat</span>
        </div>

        <table class="portal-table">
            <thead>
                <tr>
                    <th>Ma hoc phan</th>
                    <th>Ten hoc phan</th>
                    <th>So TC</th>
                    <th>Lich hoc</th>
                    <th>Hanh dong</th>
                </tr>
            </thead>
            <tbody id="registered-body">
                <tr>
                    <td colspan="5">Chua co hoc phan nao duoc dang ky.</td>
                </tr>
            </tbody>
        </table>

        <div class="section-block">
            <h3>Dang ky thi ket thuc mon</h3>
            <p>Chi mo khi hoc phi da thanh toan day du.</p>
            <button class="btn disabled" type="button">Dang ky thi ket thuc mon</button>
            <div class="alert">Ban can thanh toan hoc phi de kich hoat chuc nang dang ky thi.</div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/student-actions.js" asp-append-version="true"></script>
}
