@{
    ViewData["Title"] = "Kế toán - Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
}

<div class="portal">
    @await Html.PartialAsync("_AccountingNav")
    <section class="portal-content">
        <h1>Dashboard tài chính</h1>
        <p>Tổng hợp công nợ học phí và xử lý miễn giảm, học bổng.</p>

        <div class="section-block">
            <h3>Danh sách công nợ sinh viên</h3>
            <table class="portal-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Họ tên</th>
                        <th>Ngày sinh</th>
                        <th>Lớp chuyên ngành</th>
                        <th>Số tín chỉ đăng ký</th>
                        <th>Thành tiền</th>
                        <th>Miễn giảm</th>
                        <th>Học phí sau miễn giảm</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Nguyễn Văn An</td>
                        <td>15/01/2005</td>
                        <td>CNPM-K58</td>
                        <td>18</td>
                        <td>12.000.000đ</td>
                        <td>0đ</td>
                        <td>12.000.000đ</td>
                        <td>Không miễn giảm</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Trần Thị Bạch</td>
                        <td>20/03/2005</td>
                        <td>CNPM-K58</td>
                        <td>16</td>
                        <td>10.500.000đ</td>
                        <td>50% (Hộ nghèo)</td>
                        <td>5.250.000đ</td>
                        <td>Tiêu chuẩn: Hộ nghèo/Vùng sâu vùng xa</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="section-block" id="mien-giam">
            <h3>Phê duyệt miễn giảm học phí</h3>
            <div class="toolbar">
                <input class="input-text" id="mg-ma-sv" placeholder="Mã sinh viên" />
                <input class="input-text" id="mg-ma-chinh-sach" placeholder="Mã chính sách" />
                <input class="input-text" id="mg-ma-hoc-ky" placeholder="Mã học kỳ" />
            </div>
            <div class="toolbar">
                <input class="input-text" id="mg-ghi-chu" placeholder="Nội dung & tiêu chuẩn miễn giảm" />
                <button class="btn" type="button" id="btn-duyet-mien-giam">Phê duyệt miễn giảm</button>
            </div>
            <pre class="portal-result" id="mg-output"></pre>
        </div>

        <div class="section-block" id="hoc-bong">
            <h3>Thực hiện học bổng</h3>
            <table class="portal-table">
                <thead>
                    <tr>
                        <th>Loại học bổng</th>
                        <th>Điều kiện</th>
                        <th>Giá trị</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>A</td>
                        <td>Điểm TB học kỳ >= 8, TB các môn >= 7</td>
                        <td>750.000đ</td>
                        <td>Khuyến khích học tập</td>
                    </tr>
                    <tr>
                        <td>B</td>
                        <td>Điểm TB học kỳ >= 8.5, TB các môn >= 7</td>
                        <td>1.500.000đ</td>
                        <td>Khuyến khích học tập</td>
                    </tr>
                    <tr>
                        <td>Lê Quý Đôn</td>
                        <td>Điểm TB học kỳ >= 9, TB các môn >= 7</td>
                        <td>10.000.000đ</td>
                        <td>Học bổng danh dự</td>
                    </tr>
                    <tr>
                        <td>Giảm học phí (%)</td>
                        <td>Theo chính sách từng khoa</td>
                        <td>10% - 50%</td>
                        <td>Áp dụng theo quyết định</td>
                    </tr>
                </tbody>
            </table>

            <div class="toolbar">
                <input class="input-text" id="hb-ma-sv" placeholder="Mã sinh viên" />
                <input class="input-text" id="hb-ma-hoc-bong" placeholder="Mã học bổng" />
                <input class="input-text" id="hb-ma-hoc-ky" placeholder="Mã học kỳ" />
            </div>
            <div class="toolbar">
                <input class="input-text" id="hb-ghi-chu" placeholder="Ghi chú (nếu có)" />
                <button class="btn" type="button" id="btn-duyet-hoc-bong">Xác nhận học bổng</button>
            </div>
            <pre class="portal-result" id="hb-output"></pre>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/accounting-approvals.js" asp-append-version="true"></script>
}
